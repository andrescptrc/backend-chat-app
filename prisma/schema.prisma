// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid          String  @id @default(uuid())
  email        String  @unique
  name         String
  password     String
  phone_number String?
  picture_url  String?
  state        Boolean
  chats        Chat[]
}

model Chat {
  id       String    @id @default(uuid())
  users    User[]
  messages Message[]
}

model Message {
  id      String   @id @default(uuid())
  message String?
  name    String
  date    DateTime
  read    Boolean
  media   String[]
  Chat    Chat?    @relation(fields: [chatId], references: [id])
  chatId  String?
}
